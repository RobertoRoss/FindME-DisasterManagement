<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
	
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue14"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mainPageTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="10dp"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="@dimen/main_title_text_size"
            android:textStyle="bold" />

    </LinearLayout>
    
     <Button
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:text="@string/find"
         />   

    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_toRightOf="@id/find"
        android:hint="@string/victim_name"
        android:gravity="bottom"
         />

    <ImageView
        android:id="@+id/clicked_pic"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        android:layout_below="@id/find"
        android:scaleType="centerInside"
        android:src="@drawable/img"
        android:contentDescription="test"
         />

   <ImageButton
        android:id="@+id/capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clicked_pic"
        android:src="@drawable/camera"
        android:background="@android:color/transparent"
        android:layout_centerInParent= "true" />

</RelativeLayout>